<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
<!-- 
   Copyright 2011,2012,2013,2014,2015 Jun Tsai. All rights reserved.
   site: http://www.ganshane.com
-->

  <id>bin</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>../support/config</directory>
      <includes>
        <include>nirvana-cloud.xml.example</include>
      </includes>
      <outputDirectory>config</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../support/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>nirvana-cloud</include>
      </includes>
      <fileMode>755</fileMode>
    </fileSet>
    <fileSet>
      <directory>../support/dll</directory>
      <outputDirectory>dll</outputDirectory>
      <includes>
        <include>*storage4j*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../support/doc</directory>
      <outputDirectory>doc</outputDirectory>
      <includes>
        <include>changelog.txt</include>
        <include>README.txt</include>
        <include>INSTALL-CLOUD.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../nirvana-support</directory>
      <outputDirectory>doc</outputDirectory>
      <includes>
        <include>LICENSE*.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../nirvana-core</directory>
      <outputDirectory>doc</outputDirectory>
      <includes>
        <include>LICENSE*.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../nirvana-protocol</directory>
      <outputDirectory>doc</outputDirectory>
      <includes>
        <include>LICENSE*.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../nirvana-rpc</directory>
      <outputDirectory>doc</outputDirectory>
      <includes>
        <include>LICENSE*.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../nirvana-jni</directory>
      <outputDirectory>doc</outputDirectory>
      <includes>
        <include>LICENSE*.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/dependencies</directory>
      <outputDirectory>lib</outputDirectory>
      <!--
      <includes>
          <include>commons-io*</include>
          <include>commons-codec*</include>
          <include>jansi-*</include>
          <include>javassist-*</include>
          <include>javax.inject-*</include>
          <include>log4j-*</include>
          <include>nirvana-*</include>
          <include>plastic-*</include>
          <include>scala-library-*</include>
          <include>slf4j-api-*</include>
          <include>slf4j-log4j12-*</include>
          <include>tapestry-func-*</include>
          <include>tapestry-ioc-*</include>
          <include>tapestry5-annotations-*</include>
      </includes>
      -->
    </fileSet>
  </fileSets>
</assembly>
